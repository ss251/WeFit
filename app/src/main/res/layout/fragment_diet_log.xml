<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DietLogFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/dietText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donut"
        app:layout_constraintBottom_toBottomOf="@+id/addDiet"
        app:layout_constraintEnd_toStartOf="@+id/addDiet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addDiet"
        app:layout_constraintVertical_bias="0.413"
        android:autofillHints="Log food item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addDiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:tint="@android:color/white"
        android:src="@drawable/ic_baseline_add_24"
        android:focusable="true" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Calories:"
        app:layout_constraintEnd_toEndOf="@+id/dietText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dietText"
        app:layout_constraintTop_toBottomOf="@+id/dietText" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Food:"
        app:layout_constraintEnd_toEndOf="@+id/dietText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dietText"
        app:layout_constraintTop_toBottomOf="@+id/dietText" />


</androidx.constraintlayout.widget.ConstraintLayout>